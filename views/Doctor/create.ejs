
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
        <h1 class="text-center mb-3">
            Create Doctor
        </h1>
        <% include ./../partials/messages %> 
        <form action="/doctor-page/create" method="POST">
            <div class="form-group">
            <label for="name">Name</label>
            <input
                type="text"
                id="name"
                name="name"
                class="form-control mt-1"
                placeholder="Enter Name"
                value="<%= typeof name != 'undefined' ? name : '' %>"
            />
            </div>
            <div class="form-group mt-3">
            <label for="age">Age</label>
            <input
                type="number"
                id="age"
                name="age"
                class="form-control"
                placeholder="Enter Age"
                value="<%= typeof age != 'undefined' ? age : '' %>"
            />
            </div>
            <div class="form-group mt-3">
            <label for="NIP">NIP</label>
            <input
                type="number"
                id="NIP"
                name="NIP"
                class="form-control"
                placeholder="Enter NIP"
                value="<%= typeof NIP != 'undefined' ? NIP : '' %>"
            />
            </div>
            <div class="form-group mt-3">
                <label for="type">Type</label>
                <div class="mt-2" id="radio-check">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="type" value="1" checked>
                        <label class="form-check-label" for="type">UMUM</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type" id="type" value="2">
                        <label class="form-check-label" for="type">SPECIALIST</label>
                    </div>
                </div>
            </div>
            <div id="wrapper">
                
            </div>
            
            <button type="submit" class="btn btn-primary btn-block mt-3">
            Submit
            </button>
        </form>
        </div>
    </div>
 
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(function(){
        $('#radio-check input').on('change', function() {
            const value = $('input[name=type]:checked', '#radio-check').val()
            if(value == 2){
                var wrapper = $("#wrapper"); 
                $(wrapper).empty();
                $(wrapper).append(
                `
                <div class="form-group mt-3">
                <label for="typeName">Specialist</label>
                <select class="form-select" name="typeName" aria-label="Default select example">
                    <option selected>Choose Specialist</option>
                    <% for( let index = 0; index < specialists.length; index++ ) { %>
                    <% const specialist = specialists[index] %> 
                    <option value="<%= specialist %>"><%= specialist %></option>
                    <% } %>
                </select>
                </div>
                `
                );
                
            }
            else{
                var wrapper = $("#wrapper"); 
                $(wrapper).empty();
            }
        }); 
    })
</script>